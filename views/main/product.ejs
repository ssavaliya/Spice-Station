<% layout('layout') -%>

<div class="container">
	<div class="row">
		<div class="col-md-4">
			<img src="<%= product.image %>">
		</div>	
		<div class="col-md-4">
			
		</div>
		<div class="col-md-4">
			<h1>Dish: <%= product.name %></h1>
			<h3>Price: <%= product.price %></h3>

			<form method="post">
				<div class="btn-group" role="group" aria-label="...">
					<input type="hidden" name="quantity" id="quantity" value="1">
					<button type="button" id="minus" class="btn btn-default">-</button>
					<button type="button" id="total" class="btn btn-default">1</button>
					<button type="button" id="plus" class="btn btn-default">+</button>
				</div>

				<div class="form-group">
					<input type="hidden" name="product_id" id="quantity" value="<%= product._id %>">
					<input type="hidden" name="priceHidden" id="priceHidden" class="form-control" value="<%= product.price %>">
					<!-- <input type="hidden" name="nameHidden" id="nameHidden" class="form-control" value="<%= product.name %>">
					<input type="hidden" name="imageHidden" id="imageHidden" class="form-control" value="<%= product.image %>">--> 
 
					<input type="text" name="item" class="form-control" value="<%= product.name %>">
					<input type="text" name="priceValue" id="priceValue" class="form-control" value="<%= product.price %>">
				</div>
				<% if (user) { %>
					<button type="submit"  class="btn btn-primary btn-lg">Add to Cart</button>
				<% } else { %>
					<a href="/signup" class="btn btn-warning btn-lg">Signup to Order</a>
				<% }	  %>
			</form>
		</div>
	</div>
</div>


